
@{
    ViewData["Title"] = "Records";
}
<br />
<br />
<br />
<br />
<div class="container-fluid">
    <div class='col-md-1'></div>
    <div class="col-md-10">
        <div class="row">
            <ol class="breadcrumb">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a>Record</a></li>
            </ol>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="center gap fade-down section-heading">
                        <h2 class="main-title">Statistics</h2>
                        <hr>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="service-block">
                        <a class="pull-left bounce-in" style="cursor: pointer" asp-action="Batting">
                            <img src="~/images/bating.png" />
                        </a>
                        <div class="media-body fade-up">
                            <h3 class="media-heading">Batting</h3>
                        </div>
                    </div>
                </div><!--/.col-md-4-->
                <div class="col-md-4 col-sm-6">
                    <div class="service-block">
                        <a class="pull-left bounce-in" asp-action="Bowling" style="cursor: pointer">
                          <img src="~/images/BOwling.png"/>
                        </a>
                        <div class="media-body fade-up">
                            <h3 class="media-heading">Bowling</h3>
                        </div>
                    </div>
                </div><!--/.col-md-4-->
                <div class="col-md-4 col-sm-6">
                    <div class="service-block">
                        <a class="pull-left bounce-in" asp-action="MostCatches" style="cursor: pointer">
                            <img src="~/images/cate.png" />
                        </a>
                        <div class="media-body fade-up">
                            <h3 class="media-heading">Most Catches</h3>
                        </div>
                    </div>
                </div><!--/.col-md-4-->
            </div><!--/.row-->
            <div class="gap"></div>
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="service-block">
                        <a class="pull-left bounce-in" asp-action="MostStumps" style="cursor: pointer">
                            <img src="~/images/StumpMocks3.png" />
                        </a>
                        <div class="media-body fade-up">
                            <h3 class="media-heading">Most Stumps</h3>
                        </div>
                    </div>
                </div><!--/.col-md-4-->
                <div class="col-md-4 col-sm-6">
                    <div class="service-block">
                        <a class="pull-left bounce-in" asp-action="MostFifties" style="cursor: pointer">
                            <img src="~/images/50.png" />
                        </a>
                        <div class="media-body fade-up">
                            <h3 class="media-heading">Most Fifties</h3>
                        </div>
                    </div>
                </div><!--/.col-md-4-->
                <div class="col-md-4 col-sm-6">
                    <div class="service-block">
                        <a class="pull-left bounce-in" style="cursor: pointer" asp-action="MostCenturies">
                            <img src="~/images/100.png" />
                        </a>
                        <div class="media-body fade-up">
                            <h3 class="media-heading">Most Centuries</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="gap"></div>
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="service-block">
                        <a class="pull-left bounce-in" asp-action="MostWickets" style="cursor: pointer">
                            <img src="~/images/wickets.jpg" />
                        </a>
                        <div class="media-body fade-up">
                            <h3 class="media-heading">Most Wickets</h3>
                        </div>
                    </div>
                </div><!--/.col-md-4-->
                <div class="col-md-4 col-sm-6">
                    <div class="service-block">
                        <a class="pull-left bounce-in" asp-action="MostSixes" style="cursor: pointer">
                            <img src="~/images/six.png" />
                        </a>
                        <div class="media-body fade-up">
                            <h3 class="media-heading">Most Sixes</h3>
                        </div>
                    </div>
                </div><!--/.col-md-4-->
                <div class="col-md-4 col-sm-6">
                    <div class="service-block">
                        <a class="pull-left bounce-in" style="cursor: pointer" asp-action="MostFours">
                            <img src="~/images/four.png" />
                        </a>
                        <div class="media-body fade-up">
                            <h3 class="media-heading">Most Fours</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="gap"></div>
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="service-block">
                        <a class="pull-left bounce-in" asp-action="MostRuns" style="cursor: pointer">
                            <img src="~/images/runs.png" />
                        </a>
                        <div class="media-body fade-up">
                            <h3 class="media-heading">Most Runs</h3>
                        </div>
                    </div>
                </div><!--/.col-md-4-->
                <div class="col-md-4 col-sm-6">
                    <div class="service-block">
                        <a class="pull-left bounce-in" style="cursor: pointer">
                            <img src="~/images/mom.png" />
                        </a>
                        <div class="media-body fade-up">
                            <h3 class="media-heading">Most Man of the Match</h3>
                        </div>
                    </div>
                </div><!--/.col-md-4-->
                <div class="col-md-4 col-sm-6">
                    <div class="service-block">
                        <a class="pull-left bounce-in" style="cursor: pointer">
                            <img src="~/images/maiden.jpg" />
                        </a>
                        <div class="media-body fade-up">
                            <h3 class="media-heading">Maiden Overs</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            
    </div>
    <div class='col-md-1'></div>

</div>

@section Scripts{
    <style>
        img {
            background-image: url('');
            background-size: cover;
            background-position: center;
            height: 60px;
            width: 70px;
            /*border: 1px solid #bbb;*/
        }
        background-img {
            background-image: url('~/images/BOwling.jpg');
            background-size: cover;
            background-position: center;
            height: 20px;
            width: 25px;
        }
    </style>
}
