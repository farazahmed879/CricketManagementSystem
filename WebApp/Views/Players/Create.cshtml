@model CricketApp.Domain.Player

@{
    ViewData["Title"] = "Add Player";
}

<div class="container-fluid">
    <div class="row">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-8">
                <div class="col-md-4">
                    <div class="form-group label-floating">
                        <label asp-for="Player_Name" class="control-label">Player Name<i class="fa fa-asterisk" style="color: red" aria-hidden="true"></i></label>
                        <input asp-for="Player_Name" required class="form-control" />
                        <span asp-validation-for="Player_Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group label-floating">
                        <label asp-for="Contact" class="control-label">Contact No.</label>
                        <input asp-for="Contact" id="playerContact" class="form-control" />
                        <span asp-validation-for="Contact" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="form-group label-floating">
                            <label asp-for="CNIC" class="control-label">Cnic</label>
                            <input asp-for="CNIC" id="playerCnic" class="form-control" />
                            <span asp-validation-for="CNIC" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <label>Role</label>
                    <select asp-for="PlayerRoleId" asp-items="ViewBag.PlayerRole" placeholder="--Select--" style="width: 100%" class="js-example-basic-single">
                        <option value="">--Select--</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label>Batting Style</label>
                    <select asp-for="BattingStyleId" asp-items="ViewBag.BattingStyle" placeholder="--Select--" style="width: 100%" class="js-example-basic-single">
                        <option value="">--Select--</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label>Bowling Style</label>
                    <select asp-for="BowlingStyleId" asp-items="ViewBag.BowlingStyle" placeholder="--Select--" style="width: 100%" class="js-example-basic-single">
                        <option value="">--Select--</option>
                    </select>
                </div>


                @{ if (ViewBag.HasTeamId != null && ViewBag.HasTeamId)
                    {
                        <div class="col-md-4">
                            <label>Team<i class="fa fa-asterisk" style="color: red" aria-hidden="true"></i></label>
                            <select asp-for="TeamId" asp-items="ViewBag.TeamId" required style="width: 100%" id="teamId" class="js-example-basic-single">
                                <option value="">--Select--</option>
                            </select>
                        </div>

                    }
                    else
                    {
                        <div class="col-md-4">
                            <label>Team<i class="fa fa-asterisk" style="color: red" aria-hidden="true"></i></label>
                            <select asp-for="TeamId" asp-items="ViewBag.TeamId" required style="width: 100%" id="teamId" class="js-example-basic-single">
                                <option value="">--Select--</option>
                            </select>
                        </div>

                    }
                }

                <div class="col-md-4">
                    <label>Gender<i class="fa fa-asterisk" style="color: red" aria-hidden="true"></i></label>
                    <select asp-for="Gender" required placeholder="--Select--" style="width: 100%" class="js-example-basic-single">
                        <option value="">--Select--</option>
                        <option selected>Male</option>
                        <option>Female</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Date of birth</label>
                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" asp-for="DOB" class="form-control pull-right" id="datepicker">
                        </div>
                        <!-- /.input group -->
                    </div>
                </div>


                <div class="col-md-8">
                    <div class="form-group">
                        <div class="form-group label-floating">
                            <label asp-for="Address" class="control-label">St. Address</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>
                            <input type="checkbox" asp-for="IsGuestPlayer" value="true" class="flat-red">
                            IsGuest
                        </label>
                    </div>
                </div>

            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="img-responsive" id="PlayerImg" style="background-size:cover"></div>

                            <br />
                            <label asp-for="PlayerImage" class="btn btn-primary" style="width:50%">
                                <i class="far fa-images"> Upload</i> <input asp-for="PlayerImage" type="file" class="hidden" style="height:auto" />
                            </label>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>

    <div class="footer">
        <div class="container text-center">
            <button id="BackBtn" class="btn btn-primary btn-xs">Back</button>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="~/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script src="~/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="../../plugins/iCheck/square/blue.css">
    <script src="~/plugins/iCheck/icheck.min.js"></script>
    <style>
        #PlayerImg {
            background-image: url('');
            background-size: cover;
            background-position: center;
            height: 160px;
            width: 140px;
            border: 1px solid #bbb;
        }
    </style>
    <script>

        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });


        //Select2
        $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });

        //   $('#teamId').select2("enable", false);


        //iCheck for checkbox and radio inputs
        $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
            checkboxClass: 'icheckbox_minimal-blue',
            radioClass: 'iradio_minimal-blue'
        })

        //Date picker
        $('#datepicker').datepicker({
            autoclose: true
        })

        $(function () {
            $('#BackBtn').click(function () {
                window.location = '/Players/Index'
            });
            function readURL(input) {

                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        //$('#PlayerImg').attr('src', e.target.result);
                        const PlayerImg = document.getElementById('PlayerImg');
                        PlayerImg.style.backgroundImage = "url(" + e.target.result + ")";
                        PlayerImg.style.backgroundPosition = "cover";
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }

            $("#PlayerImage").change(function () {
                readURL(this);
            });
        });

        const phoneNumber = "9999-9999999";
        const cnic = "99999-9999999-9";

        const teleNumber = document.getElementById("playerContact");

        let telIm = new Inputmask(phoneNumber);
        telIm.mask(teleNumber);

        const cnicNumber = document.getElementById("playerCnic");

        let cnicIm = new Inputmask(cnic);
        cnicIm.mask(cnicNumber);
    </script>
}

