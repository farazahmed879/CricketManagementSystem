<body class="skin-blue">
    <div class="wrapper fixed">
        <header class="main-header">
            <!-- Logo -->
            <a href="/Home/Index" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>A</b>LT</span>
                <!-- logo for regular state and mobile devices -->
                <div align="center" valign="top" class="textContent">
                    <img id="logo" alt="ScoreExec" src="~/images/ScoreExec Black.png" />
                </div>
                @*<span class="logo-lg">Score<b>Exec</b></span>*@
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                var RoleManagementDisabled = "";
                                if (User.IsInRole("Club User"))
                                {
                                    RoleManagementDisabled = "disabled";

                                }
                                <!-- User Account: style can be found in dropdown.less -->
                                <li class="dropdown user user-menu">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <img src="~/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                                        <span class="hidden-xs"> @User.GetDisplayName()</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <!-- User image -->
                                        <li class="user-header">
                                            <img src="~/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                            <p>
                                                @User.GetEmail()
                                            </p>
                                        </li>
                                        <!-- Menu Body -->
                                        <!-- Menu Footer-->

                                        <li class="user-footer">

                                            <div class="pull-left">
                                                <a asp-controller="Teams" asp-action="RoleManagement" class="btn btn-default btn-flat @RoleManagementDisabled ">Role Management</a>
                                            </div>
                                            <div class="pull-right">
                                                <a id="Logout" class="btn btn-default btn-flat">Logout</a>
                                                <span class="AntiForge"> @Html.AntiForgeryToken() </span>
                                            </div>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-controller="Account" asp-action="Login" class="btn-flat">
                                        Login
                                    </a>
                                </li>

                            }
                        }

                        <!-- Control Sidebar Toggle Button -->
                        <li>
                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <div class="user-panel">
                            <div class="pull-left image">
                                <img src="~/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                            </div>
                            <div class="pull-left info">
                                <p>@User.GetDisplayName()</p>
                                <i class="fa fa-circle text-success"></i>Online
                            </div>
                        </div>

                    }
                }

                <!-- search form -->
                <!--<form action="#" method="get" class="sidebar-form">
                  <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Search...">
                    <span class="input-group-btn">
