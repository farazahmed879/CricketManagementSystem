<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Home | Score Executive</title>
    @*<link href="~/css/boostrap-wizard.css" rel="stylesheet" />*@
    <link href="Home/css/bootstrap.min.css" rel="stylesheet">
    <link href="Home/css/font-awesome.min.css" rel="stylesheet">
    <link href="Home/css/pe-icons.css" rel="stylesheet">
    <link href="Home/css/prettyPhoto.css" rel="stylesheet">
    <link href="Home/css/animate.css" rel="stylesheet">
    <link href="Home/css/style.css" rel="stylesheet">
    <script src="Home/js/jquery.js"></script>
    <!--ok-->
    <script src="~/fastclick/lib/fastclick.js"></script> <!--Not Sure-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Toast.css" />
    <link rel="stylesheet" href="~/font/flaticon.css">
    <link rel="shortcut icon" href="Home/images/ico/favicon.ico">
    <link rel="apple-touch-icon" sizes="144x144" href="Home/images/ico/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="114x114" href="Home/images/ico/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="72x72" href="Home/images/ico/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" href="Home/images/ico/apple-touch-icon-57x57.png">
    @RenderSection("styles", false)
</head>
<body class="skin-blue" style=" font-size: 13px;">
    <div class="wrapper fixed">
        <div id="preloader"></div>
        <header class="navbar navbar-inverse navbar-fixed-top " role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <i class="fa fa-bars"></i>
                    </button>
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index"><h1><span class="bounce-in"></span> Score Executive</h1></a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Tournament" asp-action="Index">Tournament</a></li>
                        <li><a asp-controller="Teams" asp-action="Index">Team</a></li>
                        <li><a asp-controller="Players" asp-action="Index">Player</a></li>
                        <li><a asp-controller="MatchSeries" asp-action="Index">Series</a></li>
                        <li><a asp-controller="Matches" asp-action="Index">Match</a></li>
                        <li><a asp-controller="Records" asp-action="Index">Records</a></li>
                        <li class="dropdown active">


                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <span class="hidden-xs"> @User.GetDisplayName()</span>
                                    @*<img src="~/images/user.png" class="pe-7s-gleam bounce-in" style="width: 10%; height:10%;">*@
                                    <i class="icon-angle-down"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#" id="Logout">Log Out</a></li>
                                </ul>
                            }
                            else
                            { 
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <span class="hidden-xs">User</span>
                                    @*<img src="~/images/user.png" class="pe-7s-gleam bounce-in" style="width: 10%; height:10%;">*@
                                    <i class="icon-angle-down"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a asp-controller="Account" asp-action="Login">Log In</a></li>
                                </ul>
                            }


                        </li>
                        @*<li><span class="search-trigger"><i class="fa fa-search"></i></span></li>*@
                    </ul>
                </div>
            </div>
        </header><!--/header-->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <section class="wizard">

                @RenderBody()

            </section>
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.4.0
            </div>
            <strong>Copyright <a href="">FriendsBit</a>.</strong> All rights
            reserved.
        </footer>
        <!-- Control Sidebar -->

    </div>

    <script src="Home/js/plugins.js"></script>
    <script src="Home/js/bootstrap.min.js"></script>
    <script src="Home/js/jquery.prettyPhoto.js"></script>
    <script src="Home/js/init.js"></script>
    <script type="text/javascript">var infolinks_pid = 3158006; var infolinks_wsid = 0;</script>
    <script type="text/javascript" src="//resources.infolinks.com/js/infolinks_main.js"></script>
    @RenderSection("Scripts", required: false)


    <script src="~/js/site.js" asp-append-version="true"></script>
    <style>

        #logo {
            background-image: url('');
            background-size: cover;
            background-position: center;
            height: 55px;
            width: 170px;
        }
    </style>
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })


        $(function () {
            $('#Logout').click(function () {
                const header = new Headers();
                header.append("RequestVerificationToken", $(".AntiForge" + " input").val());
                fetch('/Account/Logout', {
                    method: "POST",
                    credentials: 'same-origin',
                    headers: header
                })
                    .then(response => {
                        if (response.ok) {
                            window.location = "/";
                        }
                    });
            });
        });
        localStorage.setItem("Skin", "skin-blue")
    </script>

</body>
</html>
