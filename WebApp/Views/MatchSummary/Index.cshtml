@model WebApp.ViewModels.Summary
@{
    ViewData["Title"] = "Matches";
}
<br />
<br />
<div class="container" id="body">
    <center>
        <div class="tab" style="padding-top:3%">
            <img src="~/Home/images/Teams/@Model.Summary2dto.HomeTeamTeamLogo" style="width : 70px; height: 35px"> &nbsp;&nbsp;&nbsp;&nbsp;
            <span src="~/images/ScoreExec.png" style="font-size: 15px"><b>@Model.Summary2dto.TournamentName</b></span>
            <img src="~/Home/images/Teams/@Model.Summary2dto.OpponentTeamLogo" style="width : 70px; height: 35px">
        </div>
    </center>
    <div class="col-md-2">
        <a asp-controller="MatchSummary" asp-action="FirstInning" asp-route-matchId="@ViewBag.matchId" asp-route-oppTeamId="@ViewBag.oppTeamId" asp-route-homeTeamId="@ViewBag.homeTeamId" class="btn btn-outlined btn-primary">First Inning</a>
        <a asp-controller="MatchSummary" asp-action="SecondInning" asp-route-matchId="@ViewBag.matchId" asp-route-oppTeamId="@ViewBag.oppTeamId" asp-route-homeTeamId="@ViewBag.homeTeamId" class="btn btn-outlined btn-primary">Second Inning</a>
        <a asp-controller="MatchSummary" asp-action="Summary" asp-route-matchId="@ViewBag.matchId" asp-route-oppTeamId="@ViewBag.oppTeamId" asp-route-homeTeamId="@ViewBag.homeTeamId" class="btn btn-outlined btn-primary"><center>Summary</center></a>

    </div>
    <div class="col-md-8">

        <br>



        <div class="row" style="margin-top:-15px">
            <div class="col-lg-5" style="background-color:#01023b;border-radius:0px 40px 40px 0px; opacity: 0.95;
                padding-top:0.5%;padding-bottom:0.5%">
                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8"><b style="font-size:20px; color: white">@Model.Summary2dto.HomeTeam</b></div>
                    <div class="col-lg-2"></div>
                </div>
            </div>

            @if (Model.Summary2dto.TournamentName != null)
            {
                <div class="col-lg-2" style="background-color:maroon; border-radius: 40px 40px 40px 40px; color:white;
            text-align:center">
                    <b style="font-size:15px">@Model.Summary2dto.Stage <br>@Model.Summary2dto.GroundName</b>
                </div>
            }
            else
            {
                <div class="col-lg-2" style="background-color:maroon; border-radius: 40px 40px 40px 40px; color:white;
            text-align:center">
                    <b style="font-size:10px">@Model.Summary2dto.Type Match <br>@Model.Summary2dto.GroundName</b>
                </div>
            }

            <div class="col-lg-5" style="background-color:#010080;border-radius:40px 0px 0px 40px;
  padding-top:0.5%;padding-bottom:0.5%">
                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8"><b style="font-size:20px; color: white ">@Model.Summary2dto.OppponentTeam</b></div>
                    <div class="col-lg-2"></div>
                </div>
            </div>
        </div>

        <center>
            <div class="tab" style="padding-top:3%">
                @*<a style="height: 100px; font-size:17px; width: 200px" asp-controller="MatchSummary" asp-action="FirstInning" asp-route-matchId="@ViewBag.matchId" asp-route-oppTeamId="@ViewBag.oppTeamId" asp-route-homeTeamId="@ViewBag.homeTeamId" class="btn btn-outlined btn-primary">First Inning</a>
                    <a style="height: 100px; font-size:17px; width: 200px" asp-controller="MatchSummary" asp-action="SecondInning" asp-route-matchId="@ViewBag.matchId" asp-route-oppTeamId="@ViewBag.oppTeamId" asp-route-homeTeamId="@ViewBag.homeTeamId" class="btn btn-outlined btn-primary">Second Inning</a>
                    <a style="height: 100px; font-size:17px; width: 200px" asp-controller="MatchSummary" asp-action="Summary" asp-route-matchId="@ViewBag.matchId" asp-route-oppTeamId="@ViewBag.oppTeamId" asp-route-homeTeamId="@ViewBag.homeTeamId" class="btn btn-outlined btn-primary"><center>Summary</center></a>*@

            </div>
        </center>
        <div class="footer">
            <ul class="list-inline">
                <li><input id="BackBtn" style="background-color: maroon; color: white;" type="button" value="Back" class="btn"></li>
            </ul>
        </div>
    </div>
    <div class="col-md-2"></div>

</div>

@section Scripts{

    <script>
        $(function () {
            $('#BackBtn').click(function () {
                window.history.back();
            });
        });
    </script>
    <style>
        body {
            background-image: url("/Home/images/bg/bg1.jpg");
            background-size: 100% 100%;
            opacity: 0.85;
        }

        #homeTeam {
            background-image: url("/Home/images/bg/run copy.jpg");
            background-size: 100% 100%;
            height: 40px;
        }

        #oppTeam {
            background-image: url("/Home/images/bg/over copy.jpg");
            background-size: 100% 100%;
            height: 40px;
        }


        @@media only screen and (max-width: 300px) {
            /* For tablets: */
            .tab {
                width: 8.33%;
            }
        }
    </style>
}
